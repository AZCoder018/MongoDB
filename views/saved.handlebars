    <div class="savedArt articles">
    	<ul>
    		{{#each articles }}
    	<div class="panel panel-default">
    		<div class="panel-heading">
    		 <h3 class="panel-title">{{title}}</h3>
    		</div>
    		  <div class="panel-body">
    		    <a class="artLink" href={{link}}>{{link}}</a>
    		      <button data-id={{_id}} class="btn btn-danger pull-right removeSaved">Remove from Saved</button>
              <button data-id={{_id}} class="btn btn-primary pull-right saved-buttons"  id="modalButton" data-toggle="modal" data-target="#noteModal" data-value="{{this._id}}">View/Add Notes</button>

          </div>
    		</div>
    	<br />
    	<br />

<!--Modal -->
    <div id="noteModal" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="noteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                 <div class="modal-header">
                <h5 class="modal-title">Notes for Article <span id="article-id"></span></h5>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <div class="modal-body">
                    <div class="notes">
                    <ul class="list-group list-group-flush articles-available">
                    </ul>
                </div>
                <br/>
                    <div class="form-group">
                        <label for="exampleTextarea">Enter New Note</label>
                        <textarea class="form-control" id="notestext" rows="3"></textarea>
                    </div>
            </div>
                <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <button data-id={{_id}}  data-dismiss="modal" id="saveButton" class="btn btn-primary savenote">Save changes</button>
                  </div>
              </div>
          </div>
      </div>

      {{/each}}

    </ul>
    </div>


